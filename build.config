# OpenSecureConf Docker Build Configuration
# Edit these values before running the build script

# Docker image settings
IMAGE_NAME=open-secureconfiguration
IMAGE_TAG=latest
DOCKER_USERNAME=lordraw

# Platforms to build for (comma-separated)
# Available: linux/amd64,linux/arm64,linux/arm/v7,linux/arm/v6
PLATFORMS=linux/amd64,linux/arm64

# Docker registry (leave empty for Docker Hub)
REGISTRY=

# Build options
PUSH_TO_REGISTRY=true
USE_CACHE=true
BUILD_ARGS=

# Version tagging (set to true to also tag with version)
TAG_WITH_VERSION=true
VERSION=2.3.0

# Docker BuildKit options
BUILDKIT_PROGRESS=plain
