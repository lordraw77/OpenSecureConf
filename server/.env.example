# OpenSecureConf Server Configuration

# Server Settings
OSC_HOST=0.0.0.0
OSC_HOST_PORT=9000
OSC_WORKERS=4

# Database Configuration
OSC_DATABASE_PATH=/app/data/configurations.db

# Encryption Configuration
OSC_SALT_FILE_PATH=/app/data/encryption.salt

# Security Settings
OSC_MIN_USER_KEY_LENGTH=8

# Optional: Set to true to require API key authentication
OSC_API_KEY_REQUIRED=false
OSC_API_KEY=your-super-secret-api-key-here

# Optional: Enable clustering for high availability
OSC_CLUSTER_ENABLED=false
OSC_CLUSTER_MODE=federated | replica
OSC_CLUSTER_NODE_ID=node1:9000
OSC_CLUSTER_NODES=node2:9000,node3:9000
OSC_CLUSTER_SYNC_INTERVAL=30